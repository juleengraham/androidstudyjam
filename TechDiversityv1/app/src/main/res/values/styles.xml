<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Categories of opportunities will have this style -->
    <style name="CategoriesTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginBottom">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- Opportunities titles will have this style on the homepage-->
    <style name="OpportunityTitle2Theme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Opportunities titles will have this style -->
    <style name="OpportunityTitleTheme">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">30sp</item>
    </style>

    <!-- Action buttons for each button will have this style -->
    <style name="DeadlineTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <!-- Opportunity Details will have this style -->
    <style name="OpportunityInfoTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ListTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
    </style>

    <!-- Buttons will have this style -->
    <style name="ActionButtonTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
    </style>







    <!-- Opportunity Subheadings will have this style -->
    <style name="SubheadingTheme">
        <item name="android:layout_width">152dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>
